package app.access

allow = is_allowed

default is_allowed = false

is_allowed {
	   some i
	   input.tenant == data.bundles[i].tenant
	   input.bid == data.bundles[i].bid
	   input.maj_ver == data.bundles[i].maj_ver
	   data.bundles[i].IC != ""
	   data.bundles[i].IC <= input.level
	   dept := data.bundles[i].dept[_]
	   dept == input.dept[_]
	   user_is_employee_IC
	   input.level != ""
}

